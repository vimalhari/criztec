---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero2.astro';
import Layout from '~/layouts/PageLayout.astro';
import Faqs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import BreadcrumbSchema from '~/components/common/BreadcrumbSchema.astro';

const metadata = {
  title: 'Expert SEO Services | Boost Your Rankings | Criztec Technologies',
  description:
    'Drive organic traffic and achieve top search engine rankings with our expert SEO services for businesses in the UK, Europe, and worldwide. Proven SEO strategies that deliver measurable results and ROI.',
  keywords:
    'SEO services, SEO agency, local SEO, search engine optimization, Google ranking, organic traffic, keyword research, on-page SEO, off-page SEO, technical SEO, SEO audit, link building',
  structuredData: {
    '@context': 'https://schema.org',
    '@type': 'ProfessionalService',
    name: 'SEO Services',
    description: 'Expert search engine optimization services to improve Google rankings and organic traffic',
    provider: {
      '@type': 'Organization',
      name: 'Criztec Technologies',
      url: 'https://criztec.com',
    },
    areaServed: [
      { '@type': 'Place', name: 'United Kingdom' },
      { '@type': 'Place', name: 'Europe' },
      { '@type': 'Place', name: 'Worldwide' },
    ],
    serviceType: 'Search Engine Optimization',
    priceRange: '££',
    offers: [
      {
        '@type': 'Offer',
        name: 'SEO Audit & Consultancy',
        description: 'Comprehensive SEO audit and strategic recommendations',
      },
      {
        '@type': 'Offer',
        name: 'Local SEO',
        description: 'Local search optimization for businesses targeting specific UK regions and cities',
      },
      {
        '@type': 'Offer',
        name: 'Technical SEO',
        description: 'Website optimization for search engine crawling and indexing',
      },
    ],
  },
  openGraph: {
    type: 'website',
    locale: 'en_GB',
    images: [
      {
        url: 'https://assets.criztec.com/check-seo-banner-art-1-aHR0cHM6.webp',
        width: 1200,
        height: 630,
        alt: 'SEO Services - Criztec Technologies',
      },
    ],
  },
};
---

<Layout metadata={metadata}>
  <BreadcrumbSchema
    items={[
      { name: 'Home', url: '/' },
      { name: 'Services', url: '/services' },
      { name: 'SEO Services', url: '/seo' },
    ]}
  />
  <!-- Hero Widget -->
  <Hero
    overlapHeader={false}
    tagline="Dominate Search Results"
    title="Expert SEO Services"
    subtitle="Propel your business to the top of Google with data-driven SEO strategies. Increase visibility, attract qualified leads, and achieve sustainable growth."
    actions={[{ variant: 'primary', target: '', text: 'Get Free SEO Audit', href: '/contact' }]}
    image={{
      src: 'https://assets.criztec.com/check-seo-banner-art-1-aHR0cHM6.webp',
      alt: 'SEO Services Hero Image',
    }}
  />

  <!-- Stats Widget -->
  <Stats
    title="Why SEO Matters for Your Business"
    stats={[
      { title: 'Higher Rankings', amount: '75%' },
      { title: 'Increased Traffic', amount: '53%' },
      { title: 'Better Leads', amount: '14.6%' },
      { title: 'Local Advantage', amount: '46%' },
    ]}
  />

  <!-- Features2 Widget (Our Services) -->
  <Features2
    title="Our Comprehensive SEO Solutions"
    subtitle="We offer a full suite of SEO services, covering every aspect needed to improve your website's performance and visibility."
    columns={3}
    items={[
      {
        title: 'SEO Consultancy',
        description:
          'Expert guidance and strategic planning tailored to your specific business goals and market position.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Local SEO',
        description:
          'Optimize your online presence to attract local customers through Google Maps and local search results.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Technical SEO',
        description:
          'Ensure your website is technically sound, easily crawlable, and indexed correctly by search engines.',
        icon: 'tabler:settings-cog',
      },
      {
        title: 'On-Page Optimization',
        description:
          'Optimize website content, meta tags, and structure to improve relevance and ranking for target keywords.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Content Marketing & SEO',
        description:
          'Create high-quality, engaging content that attracts links, resonates with your audience, and boosts rankings.',
        icon: 'tabler:pencil',
      },
      {
        title: 'Link Building',
        description:
          "Build high-quality backlinks from relevant sources to increase your website's authority and trust.",
        icon: 'tabler:link',
      },
      {
        title: 'Keyword Research',
        description: 'Identify valuable keywords your target audience is searching for to drive relevant traffic.',
        icon: 'tabler:search',
      },
      {
        title: 'E-commerce SEO',
        description:
          'Specialized strategies to increase visibility and sales for your online store in competitive markets.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Reporting & Analytics',
        description:
          'Transparent reporting and in-depth analysis to track progress, measure ROI, and refine strategies.',
        icon: 'tabler:chart-infographic',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Content Widget (Our Process) -->
  <Content
    classes={{ container: 'content-image-bg-white' }}
    title="Our Proven SEO Process"
    subtitle="We follow a structured, data-driven process to deliver measurable results and long-term SEO success for your business."
    items={[
      {
        title: '1. Discovery & Analysis',
        description:
          'We start by understanding your business, goals, target audience, and competitors. We conduct a thorough SEO audit of your current website.',
      },
      {
        title: '2. Keyword Research & Strategy',
        description:
          'Identifying the most valuable keywords your customers are searching for and developing a tailored SEO strategy.',
      },
      {
        title: '3. On-Page & Technical Implementation',
        description:
          "Optimizing your website's structure, content, and technical elements based on our strategy and best practices.",
      },
      {
        title: '4. Content Creation & Optimization',
        description:
          'Developing high-quality, SEO-friendly content that engages users and attracts search engine crawlers.',
      },
      {
        title: '5. Off-Page SEO & Link Building',
        description:
          "Building your website's authority and credibility through strategic outreach and high-quality backlink acquisition.",
      },
      {
        title: '6. Performance Tracking & Reporting',
        description:
          'Continuously monitoring rankings, traffic, and conversions. Providing transparent reports and refining strategies based on data.',
      },
    ]}
    image={{
      src: 'https://assets.criztec.com/Seo-Strategy-scaled-1-png-aHR0cHM6.webp', // Consider a more process-oriented image
      alt: 'Our SEO Process Diagram',
    }}
  >
    <Fragment slot="actions">
      <a href="/contact" class="btn btn-primary"> Discuss Your SEO Needs </a>
    </Fragment>
  </Content>

  <!-- Content Widget (Why Choose Us) -->
  <Content
    isReversed
    classes={{ container: 'content-image-bg-white' }}
    title="Your Expert SEO Partner"
    subtitle="Choose a dedicated team committed to your success in a competitive digital landscape."
    items={[
      {
        title: 'Market Expertise',
        description: 'Deep understanding of market dynamics and search behaviour to give you a competitive edge.',
      },
      {
        title: 'Results-Driven Strategies',
        description:
          'We focus on delivering measurable results – increased traffic, qualified leads, and improved ROI.',
      },
      {
        title: 'Transparent Reporting',
        description:
          'Clear, regular reports detailing our activities, your progress, and the impact on your business goals.',
      },
      {
        title: 'White-Hat Techniques',
        description: 'We strictly adhere to ethical, white-hat SEO practices for sustainable, long-term results.',
      },
      {
        title: 'Dedicated Support',
        description: 'A proactive and responsive team, always available to answer your questions and provide support.',
      },
    ]}
    image={{
      src: 'https://assets.criztec.com/photo-1600880292089-90a7e086ee-aHR0cHM6.jpg',
      alt: 'Team collaborating on SEO strategy',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
    <Fragment slot="actions">
      <a href="/about" class="btn btn-secondary"> Learn More About Us </a>
    </Fragment>
  </Content>

  <!-- FAQs Widget -->
  <Faqs
    title="Frequently Asked SEO Questions"
    subtitle="Answers to common questions about SEO and how it can benefit your business."
    columns={1}
    items={[
      {
        title: 'What is SEO and why is it important for my business?',
        description:
          "SEO (Search Engine Optimization) is the practice of improving your website to increase its visibility in search engine results (like Google) for relevant searches. It's crucial for businesses because it drives organic (free) traffic, connects you with potential customers actively looking for your services/products, and builds brand credibility.",
      },
      {
        title: 'How long does it take to see results from SEO?',
        description:
          'SEO is a long-term strategy. While some improvements can be seen within a few months (3-6 months typically), significant results often take 6-12 months, especially in competitive markets. Consistency is key.',
      },
      {
        title: "What's the difference between On-Page, Off-Page, and Technical SEO?",
        description:
          'On-Page SEO involves optimizing elements *on* your website (content, keywords, meta tags). Off-Page SEO focuses on activities *off* your website to build authority (like link building). Technical SEO ensures your website meets the technical requirements of search engines (site speed, crawlability, mobile-friendliness). We cover all three.',
      },
      {
        title: 'Is Local SEO important if I serve all of the UK?',
        description:
          'Even if you serve the entire UK (or beyond), Local SEO is vital if you have a physical presence or want to attract customers searching within specific regions and cities. It helps you appear in map results and local searches, capturing high-intent users.',
      },
      {
        title: 'How much do your SEO services cost?',
        description:
          'Our SEO packages are tailored to your specific needs, goals, and the competitiveness of your industry. We offer various options and can provide a custom quote after an initial consultation and audit. Contact us for details.',
      },
      {
        title: 'Do you guarantee #1 rankings?',
        description:
          "No reputable SEO agency can guarantee specific rankings (especially #1) because search engine algorithms are complex and constantly changing, and we don't control them. We *do* guarantee transparent, ethical work focused on achieving the best possible results and significant improvements in visibility and traffic based on proven strategies.",
      },
    ]}
  />

  <!-- CallToAction Widget -->
  <CallToAction
    title="Ready to Rank Higher?"
    subtitle="Partner with our SEO team to drive targeted organic traffic, generate qualified leads, and achieve sustainable business growth. Contact us today for a free, no-obligation consultation and SEO audit."
    actions={[{ variant: 'primary', text: 'Get Your Free SEO Quote', href: '/contact' }]}
  />
</Layout>
