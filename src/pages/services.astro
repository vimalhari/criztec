        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'E-commerce Solutions',
            description: 'Online store development and e-commerce platforms',
          },
        },
      ],
    },
  },
  openGraph: {
    type: 'website',
    locale: 'en_GB',
    images: [
      {
        url: 'https://assets.criztec.com/photo-1519389950473-47ba027778-aHR0cHM6.jpg',
        width: 1200,
        height: 630,
        alt: 'Criztec Technologies Services - Web Development & Digital Marketing',
      },
    ],
  },
};
---

<Layout metadata={metadata}>
  <BreadcrumbSchema
    items={[
      { name: 'Home', url: '/' },
      { name: 'Services', url: '/services' },
    ]}
  />
  <!-- Hero Widget ******************* -->

  <Hero
    overlapHeader={false}
    tagline="Our Services"
    title="Comprehensive Digital Solutions"
    subtitle="From custom web development to strategic digital marketing, we provide the complete range of services your business needs to thrive online. Our expert team delivers results-driven solutions tailored to your goals."
    actions={[
      { variant: 'primary', text: 'Get Free Consultation', href: '/contact' },
      { text: 'View Our Work', href: '/about' },
    ]}
    image={{
      src: 'https://assets.criztec.com/photo-1519389950473-47ba027778-aHR0cHM6.jpg',
      alt: 'Professional team working on digital solutions - Criztec Technologies Services',
    }}
  />

  <section class="py-16 sm:py-24 bg-gray-50 dark:bg-slate-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h2 class="text-2xl md:text-3xl lg:text-[2rem] font-bold tracking-tight text-gray-900 dark:text-white">
          Browse our services
        </h2>
        <p class="mt-4 text-base md:text-lg text-gray-600 dark:text-slate-400">
          Choose a service to learn more. Each card links to a dedicated page with details and next steps.
        </p>
      </div>

      <div class="mt-12 space-y-16">
        {
          serviceGroups.map((group) => (
            <div>
              <div class="mb-6">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">{group.title}</h3>
                {group.description && <p class="mt-2 text-gray-600 dark:text-slate-400">{group.description}</p>}
              </div>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {group.services.map((service) => (
                  <a
                    href={service.href}
                    class="group relative block rounded-xl border border-gray-200 dark:border-slate-700 bg-white dark:bg-slate-800 p-6 hover:shadow-lg hover:border-primary/50 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                    aria-label={`${service.title} service page`}
                  >
                    {service.badge && (
                      <span class="absolute -top-2 -right-2 bg-primary text-white text-xs font-semibold px-2.5 py-1 rounded-full">
                        {service.badge}
                      </span>
                    )}
                    <h4 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors">
                      {service.title}
                    </h4>
                    <p class="mt-2 text-sm text-gray-600 dark:text-slate-400 leading-relaxed">{service.description}</p>
                    <div class="mt-4 text-sm font-medium text-primary group-hover:text-secondary transition-colors flex items-center gap-1">
                      Learn more
                      <span class="group-hover:translate-x-1 transition-transform">→</span>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Free Consultation',
        href: '/contact',
      },
    ]}
    title="Not sure what you need?"
    subtitle="Tell us your goals and we’ll recommend the best service path — from development to automation."
  />
</Layout>
