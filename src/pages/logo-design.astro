---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero2.astro';
import Layout from '~/layouts/PageLayout.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps from '~/components/widgets/Steps.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Professional Logo Design Services',
  description:
    'Create a powerful first impression that lasts forever with our professional logo design services - 600+ logos designed for businesses worldwide.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    overlapHeader={false}
    tagline="Brand Identity Solutions"
    title="Professional Logo Design Services"
    subtitle="Create a Powerful First Impression That Lasts Forever"
    actions={[{ variant: 'primary', target: '', text: 'Get Started', href: '/contact' }]}
    image={{
      src: 'https://assets.criztec.com/photo-1626785774573-4b79931534-aHR0cHM6.jpg',
      alt: 'Logo Design Process Illustration',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Why Your Logo Can Make or Break Your Business"
    subtitle="Did you know that customers form an opinion about your business within the first 7 seconds of seeing your brand? A poorly designed logo can instantly damage your credibility, while a professional one builds trust, communicates quality, and sets you apart from competitors."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features2 Widget ************** -->

  <Features2
    columns={2}
    items={[
      {
        title: 'The Cost of a Bad Logo',
        description:
          'Lost customers who judge your business as unprofessional, difficulty attracting premium clients, brand confusion and lack of memorability, expensive rebranding costs down the line.',
        icon: 'tabler:alert-triangle',
      },
      {
        title: 'The Power of Professional Design',
        description:
          'Instant credibility and trust with new customers, higher perceived value allows for premium pricing, memorable brand recognition that drives referrals, professional appearance across all marketing materials.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Pricing Widget ****************** -->

  <Pricing
    title="Our Logo Design Packages"
    subtitle="Tailored Solutions for Every Business Stage"
    prices={[
      {
