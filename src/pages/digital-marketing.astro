---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Digital Marketing Services | Criztec Technologies',
  description:
    'Expert digital marketing services for businesses in the UK, Europe, and worldwide. Boost your online presence with our SEO, PPC, social media marketing, and content marketing strategies. Get more leads and grow your business.',
  keywords:
    'digital marketing, SEO services, PPC, social media marketing, content marketing, online advertising, Google Ads, Facebook marketing, Instagram marketing, LinkedIn marketing, email marketing, conversion optimization',
  structuredData: {
    '@context': 'https://schema.org',
    '@type': 'Service',
    name: 'Digital Marketing Services',
    description:
      'Comprehensive digital marketing services including SEO, PPC, social media marketing, and content creation',
    provider: {
      '@type': 'Organization',
      name: 'Criztec Technologies',
      url: 'https://criztec.com',
    },
    areaServed: [
      { '@type': 'Place', name: 'United Kingdom' },
      { '@type': 'Place', name: 'Europe' },
      { '@type': 'Place', name: 'Worldwide' },
    ],
    serviceType: 'Digital Marketing',
    offers: [
      {
        '@type': 'Offer',
        name: 'SEO Services',
        description: 'Search Engine Optimization to improve organic rankings',
      },
      {
        '@type': 'Offer',
        name: 'PPC Advertising',
        description: 'Pay-per-click advertising campaigns on Google and social media',
      },
      {
        '@type': 'Offer',
        name: 'Social Media Marketing',
        description: 'Social media strategy and management across all platforms',
      },
    ],
  },
  openGraph: {
    type: 'website',
    locale: 'en_GB',
    images: [
      {
        url: 'https://assets.criztec.com/digital-marketing.webp',
        width: 1200,
        height: 630,
        alt: 'Digital Marketing Services - Criztec Technologies',
      },
    ],
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    overlapHeader={false}
    tagline=""
    title="Digital Marketing"
    subtitle="Results-driven strategy, effective search optimisation, targeted social media, pro website management & engaging communication"
