---
import Layout from '~/layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import { buildMailto, CAREERS_EMAIL } from '~/utils/mailto';

const metadata = {
  title: 'Careers - Join Our Growing Team | Criztec Technologies',
  description:
    'Join Criztec Technologies and build your career in web development, digital marketing, and technology. Remote opportunities, competitive salaries, and comprehensive benefits.',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    type: 'website',
    title: 'Careers at Criztec Technologies - Remote & Flexible Jobs',
    description:
      'Join our team of innovative developers and digital marketing experts. Remote-first culture, competitive packages, and growth opportunities.',
    image: 'https://assets.criztec.com/hero-image.webp',
  },
  canonical: 'https://criztec.com/careers',
};

const jobs = await getCollection('jobs', ({ id, data }) => !data.draft && !id.startsWith('_'));
const activeJobs = jobs
  .filter((entry) => entry.data.isActive)
  .map((entry) => ({
    id: entry.id,
    ...entry.data,
  }));

// Generate JSON-LD structured data for SEO
const structuredData = {
  '@context': 'https://schema.org/',
  '@type': 'Organization',
  name: 'Criztec Technologies',
  url: 'https://criztec.com',
  logo: 'https://criztec.com/assets/images/CriztecLogo.png',
  description: 'Web development and digital marketing agency',
  address: {
    '@type': 'PostalAddress',
    streetAddress: '121 Bath Road',
    addressLocality: 'Slough',
    addressRegion: 'Berkshire',
    postalCode: 'SL1 3UW',
    addressCountry: 'GB',
  },
  contactPoint: {
    '@type': 'ContactPoint',
    telephone: '+44-740-4979-307',
    contactType: 'HR',
    email: CAREERS_EMAIL,
  },
  sameAs: ['https://www.linkedin.com/company/criztec'],
};

// Generate JobPosting structured data for each job
const jobPostings = activeJobs.map((job) => ({
  '@context': 'https://schema.org/',
  '@type': 'JobPosting',
  title: job.title,
  description: job.description,
  identifier: job.id,
  datePosted: job.postedDate,
  employmentType: job.type.toUpperCase().replace('-', '_'),
  hiringOrganization: {
    '@type': 'Organization',
    name: 'Criztec Technologies',
    sameAs: 'https://criztec.com',
  },
  jobLocation: {
    '@type': 'Place',
    address: {
      '@type': 'PostalAddress',
      addressLocality: job.location,
    },
  },
  baseSalary: job.salaryRange
    ? {
        '@type': 'MonetaryAmount',
        currency: job.salaryRange.includes('â‚¹') ? 'INR' : 'GBP',
        value: {
          '@type': 'QuantitativeValue',
          value: job.salaryRange,
        },
      }
    : undefined,
}));
---

<Layout metadata={metadata}>
  <!-- Add JSON-LD structured data -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <!-- Add job posting structured data -->
  {jobPostings.map((job) => <script is:inline type="application/ld+json" set:html={JSON.stringify(job)} />)}

  <!-- Hero Section - Simplified -->
  <section class="relative px-4 py-16 mx-auto max-w-7xl lg:px-8 lg:py-24 text-center">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-6">
        Join Our <span class="text-primary">Growing Team</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
        Build your career with innovative web development and digital marketing projects. Remote-first culture with
        competitive benefits.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#open-positions"
          class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-secondary transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6M8 6V4a2 2 0 012-2h4a2 2 0 012 2v2m-8 0h8"
            ></path>
          </svg>
          View Open Positions
        </a>
        <a
          href={buildMailto(CAREERS_EMAIL)}
          class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          Send Resume
        </a>
      </div>
    </div>
  </section>

  <!-- Why Join Us - Simplified -->
  <section class="px-4 py-16 mx-auto max-w-7xl lg:px-8 bg-gray-50 dark:bg-gray-900">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Why Choose Criztec?</h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Join a team that values innovation, growth, and work-life balance
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
        <div class="w-12 h-12 bg-primary-light rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Remote-First Culture</h3>
        <p class="text-gray-600 dark:text-gray-300">Work from anywhere with flexible hours and modern tools.</p>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
        <div class="w-12 h-12 bg-primary-light rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
            ></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Career Growth</h3>
        <p class="text-gray-600 dark:text-gray-300">Continuous learning opportunities and clear advancement paths.</p>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
        <div class="w-12 h-12 bg-primary-light rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
            ></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Competitive Package</h3>
        <p class="text-gray-600 dark:text-gray-300">Market-competitive salaries with comprehensive benefits.</p>
      </div>
    </div>

    <!-- Open Positions - Simplified -->
    <section id="open-positions" class="px-4 py-16 mx-auto max-w-7xl lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Open Positions</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Explore exciting career opportunities and find the perfect role for your skills
        </p>
      </div>

      {
        activeJobs.length > 0 ? (
          <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {activeJobs.map((job) => (
              <article class="group relative flex h-full flex-col overflow-hidden rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex flex-1 flex-col">
                  <div class="min-w-0">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                      <a
                        href={`/careers/${job.id}`}
                        class="rounded-sm hover:text-primary-700 dark:hover:text-primary-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 focus-visible:ring-offset-white dark:focus-visible:ring-offset-gray-800"
                      >
                        {job.title}
                      </a>
                    </h3>

                    <div class="mt-3 flex flex-wrap items-center gap-2">
                      <span class="inline-flex items-center rounded-full bg-gray-100 dark:bg-gray-700 px-3 py-1 text-xs font-medium text-gray-700 dark:text-gray-200">
                        {job.department}
                      </span>
                      <span class="inline-flex items-center rounded-full bg-gray-100 dark:bg-gray-700 px-3 py-1 text-xs font-medium text-gray-700 dark:text-gray-200">
                        {job.location}
                      </span>
                      <span class="inline-flex items-center rounded-full bg-gray-100 dark:bg-gray-700 px-3 py-1 text-xs font-medium text-gray-700 dark:text-gray-200">
                        {job.experience}
                      </span>
                      <span class="inline-flex items-center rounded-full bg-gray-100 dark:bg-gray-700 px-3 py-1 text-xs font-medium text-gray-700 dark:text-gray-200">
                        {job.type.charAt(0).toUpperCase() + job.type.slice(1).replace('-', ' ')}
                      </span>
                      {job.salaryRange && (
                        <span class="inline-flex items-center rounded-full bg-green-100 dark:bg-green-900 px-3 py-1 text-xs font-medium text-green-800 dark:text-green-200">
                          {job.salaryRange}
                        </span>
                      )}
                    </div>

                    <p class="mt-4 text-gray-600 dark:text-gray-300 leading-relaxed line-clamp-3">{job.description}</p>
                  </div>
                </div>

                <div class="mt-6 grid grid-cols-2 gap-3">
                  <a
                    href={buildMailto(CAREERS_EMAIL, {
                      subject: `Application for ${job.title}`,
                      body: `Hi, I would like to apply for the ${job.title} position.`,
                    })}
                    class="inline-flex items-center justify-center px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 transition-colors"
                  >
                    Apply Now
                  </a>
                  <a
                    href={`/careers/${job.id}`}
                    class="inline-flex items-center justify-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
                  >
                    View role
                  </a>
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="text-6xl mb-4">ðŸ’¼</div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">No Open Positions</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-md mx-auto">
              We're always looking for talented individuals. Send us your resume and we'll keep you in mind for future
              opportunities.
            </p>
            <a
              href={buildMailto(CAREERS_EMAIL)}
              class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-secondary transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
              Send Resume
            </a>
          </div>
        )
      }
    </section>

    <!-- Contact Section -->
    <section class="px-4 py-16 mx-auto max-w-7xl lg:px-8 bg-gray-50 dark:bg-gray-900">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Ready to Join Us?</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          Have questions about working at Criztec? We'd love to hear from you.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={buildMailto(CAREERS_EMAIL)}
            class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-secondary transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            Contact HR
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
              ></path>
            </svg>
            General Inquiries
          </a>
        </div>
      </div>
    </section>
  </section>
</Layout>
