---
import type { CaseStudy } from '../../types/case-study';

export interface Props {
  study: CaseStudy;
}

const { study } = Astro.props;
---

<!-- Clean Hero Section -->
<section class="relative bg-gray-900 overflow-hidden">
  <!-- Subtle gradient accent -->
  <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-primary/10 to-transparent"></div>

  <div class="relative px-4 py-12 mx-auto max-w-7xl lg:px-8 lg:py-16">
    <!-- Breadcrumb -->
    <nav class="flex items-center space-x-2 text-sm text-gray-400 mb-6" aria-label="breadcrumb">
      <a href="/" class="hover:text-white transition-colors">Home</a>
      <span class="text-gray-600">/</span>
      <a href="/case-studies" class="hover:text-white transition-colors">Case Studies</a>
      <span class="text-gray-600">/</span>
      <span class="text-white">{study.data.client}</span>
    </nav>

    <div class="grid lg:grid-cols-2 gap-10 items-center">
      <!-- Left Content -->
      <div class="space-y-5">
        <!-- Category -->
        <span class="inline-flex items-center px-3 py-1 text-sm font-medium text-primary bg-primary/10 rounded-full">
          {study.data.category}
        </span>

        <!-- Title -->
        <h1 class="text-4xl font-bold text-white leading-tight">
          {study.data.title}
        </h1>

        <p class="text-lg md:text-xl text-gray-300 leading-relaxed">
          {study.data.subtitle}
        </p>

        <!-- Key Info -->
        <div class="flex flex-wrap gap-6 pt-2">
          <div>
            <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Duration</div>
            <div class="text-white font-medium">{study.data.duration}</div>
          </div>
          <div>
            <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Project Type</div>
            <div class="text-white font-medium">{study.data.projectType}</div>
          </div>
          <div>
            <div class="text-xs text-gray-500 uppercase tracking-wide mb-1">Launch Date</div>
            <div class="text-white font-medium">{study.data.launchDate}</div>
          </div>
        </div>

        <!-- CTA -->
        <a
          href={study.data.website}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-5 py-2.5 bg-primary text-white font-medium rounded-lg hover:bg-secondary transition-colors text-sm mt-2"
        >
          Visit Live Site
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      </div>

      <!-- Right: Key Result Highlight -->
      <div class="hidden lg:block">
        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-8 border border-white/10">
          <div class="text-sm text-gray-400 mb-2">Key Achievement</div>
          <div class="text-4xl font-bold text-primary mb-2">
            +{study.data.results.performance?.[0]?.improvement || 'N/A'}
          </div>
          <div class="text-white">
            {study.data.results.performance?.[0]?.metric || 'Performance Improvement'}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
