---
import type { CityData } from '../../data/cities';
import Button from '../ui/Button.astro';
import Image from '../common/Image.astro';
const heroImage = 'https://assets.criztec.com/hero-image.webp';

export interface Props {
  city: CityData;
}

const { city } = Astro.props;
---

<section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-indigo-900 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-black/20"></div>

  <div class="relative mx-auto max-w-7xl px-4 py-12 sm:px-6 sm:py-16 lg:px-8 lg:py-20">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-16 items-center">
      <!-- Content -->
      <div class="lg:pr-8">
        <!-- Location Badge -->
        <div class="mb-6">
          <span
            class="inline-flex items-center rounded-full bg-white/10 px-4 py-2 text-sm font-medium text-white backdrop-blur-sm border border-white/20"
          >
            <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
              ></path>
            </svg>
            {city.name}, {city.region} ({city.postcode})
          </span>
        </div>

        <p class="text-sm text-blue-100/90 mb-4">
          Astro-first builds • WordPress → Astro migration • WordPress management
        </p>

        <!-- Main Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-[3.25rem] font-bold tracking-tight mb-4">
          <span class="block text-white">{city.headline}</span>
        </h1>

        <!-- Subheading -->
        <p class="text-lg md:text-xl text-blue-100 mb-6 leading-relaxed">
          {city.subheading}
        </p>

        <!-- Hero Description -->
        <p class="text-base text-blue-50 mb-6 leading-relaxed max-w-2xl">
          {city.heroDescription}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-3">
          <Button
            variant="primary"
            class="bg-white text-blue-900 hover:bg-blue-50 font-semibold px-6 py-3 text-sm shadow-lg"
            href="/contact"
          >
            Book a Free Consultation
          </Button>
          <Button
            variant="secondary"
            class="border-white text-white hover:bg-white hover:text-blue-900 font-semibold px-6 py-3 text-sm backdrop-blur-sm"
            href="#services"
          >
            View Services in {city.name}
          </Button>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative lg:pl-8">
        <div class="relative">
          <!-- Main Hero Image -->
          <div
            class="relative rounded-xl overflow-hidden bg-white/10 backdrop-blur-sm border border-white/20 shadow-lg"
          >
            <Image
              src={heroImage}
              alt={`Website development services in ${city.name}`}
              width={600}
              height={400}
              class="w-full h-auto"
              loading="eager"
              decoding="async"
            />
            <!-- Overlay with city info -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            <div class="absolute bottom-4 left-4 right-4">
              <div class="bg-white/90 backdrop-blur-sm rounded-lg p-4">
                <h3 class="font-semibold text-gray-900 mb-1">Serving {city.name} Since 2019</h3>
                <p class="text-sm text-gray-600">Trusted by {city.testimonialFocus || 'local businesses'}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
