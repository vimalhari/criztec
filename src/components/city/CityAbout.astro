---
import type { CityData } from '../../data/cities';
import Image from '../common/Image.astro';

export interface Props {
  city: CityData;
}

const { city } = Astro.props;

// Local expertise points
const expertisePoints = [
  {
    title: 'Local Market Knowledge',
    description: `Deep understanding of ${city.name}'s business landscape and customer behaviors`,
    icon: 'üéØ',
  },
  {
    title: 'Regional Network',
    description: `Strong connections throughout ${city.region} and neighboring areas`,
    icon: 'ü§ù',
  },
  {
    title: 'Industry Expertise',
    description: `Specialized experience in ${city.keyIndustries.slice(0, 2).join(' and ')}`,
    icon: 'üíº',
  },
  {
    title: 'Local SEO Mastery',
    description: `Proven track record of ranking businesses in ${city.name} search results`,
    icon: 'üìç',
  },
];

// Statistics and achievements
const achievements = [
  { number: '50+', label: `${city.name} Projects`, highlight: true },
  { number: '98%', label: 'Client Satisfaction', highlight: false },
  { number: '5+', label: 'Years Local Experience', highlight: false },
  { number: '24/7', label: 'Support Available', highlight: false },
];
---

<section class="py-16 sm:py-24 bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Content Side -->
      <div class="lg:pr-8">
        <!-- Section Badge -->
        <div class="mb-6">
          <span class="inline-flex items-center rounded-full bg-orange-100 px-4 py-2 text-sm font-medium text-primary">
            About Our {city.name} Team
          </span>
        </div>

        <!-- Main Heading -->
        <h2 class="text-2xl font-bold text-gray-900 mb-6">
          Your Trusted Website Development Partner in {city.name}
        </h2>

        <!-- About Content -->
        <div class="prose prose-lg text-gray-600 mb-8">
          <p class="text-xl leading-relaxed mb-6">
            {city.aboutContent}
          </p>

          <p class="leading-relaxed">
            We primarily build modern websites with the Astro framework to deliver excellent performance, SEO, and a
            clean developer experience. If you're currently on WordPress, we can migrate your site to Astro or manage
            your existing WordPress installation with updates, security, backups, and support.
          </p>
        </div>

        <!-- Local Landmarks & Context -->
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Proudly Serving the {city.name} Community</h3>
          <div class="grid grid-cols-2 gap-4">
            {
              city.localLandmarks.slice(0, 4).map((landmark) => (
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {landmark}
                </div>
              ))
            }
          </div>
        </div>

        <!-- Expertise Points -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
          {
            expertisePoints.map((point) => (
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-primary-light">
                    <span class="text-lg">{point.icon}</span>
                  </div>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-semibold text-gray-900 mb-1">{point.title}</h4>
                  <p class="text-sm text-gray-600">{point.description}</p>
                </div>
              </div>
            ))
          }
        </div>

        <!-- Key Stats -->
        <div class="grid grid-cols-4 gap-4 p-6 bg-gray-50 rounded-xl">
          {
            achievements.map((stat) => (
              <div class="text-center">
                <div class={`text-2xl font-bold mb-1 ${stat.highlight ? 'text-primary' : 'text-gray-900'}`}>
                  {stat.number}
                </div>
                <div class="text-xs text-gray-600">{stat.label}</div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Visual Side -->
      <div class="lg:pl-8">
        <!-- Main Image -->
        <div class="relative">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <Image
              src="https://assets.criztec.com/digital-marketing.webp"
              alt={`Website development team in ${city.name}`}
              width={600}
              height={400}
              class="w-full h-auto"
              loading="lazy"
            />

            <!-- Overlay Content -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            <div class="absolute bottom-6 left-6 right-6">
              <div class="bg-white/95 backdrop-blur-sm rounded-lg p-4">
                <h3 class="font-semibold text-gray-900 mb-2">Established in {city.name}</h3>
                <p class="text-sm text-gray-600 mb-3">
                  Building digital success stories across {city.region} since 2019
                </p>
                <div class="flex items-center text-sm">
                  <div class="flex -space-x-2 mr-3">
                    <div class="w-6 h-6 rounded-full bg-primary border-2 border-white"></div>
                    <div class="w-6 h-6 rounded-full bg-secondary border-2 border-white"></div>
                    <div class="w-6 h-6 rounded-full bg-accent border-2 border-white"></div>
                  </div>
                  <span class="text-gray-600">Local team of experts</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Elements -->
          <div class="absolute -top-4 -right-4 bg-primary text-white rounded-full p-4 shadow-lg">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
          </div>

          <div class="absolute -bottom-4 -left-4 bg-primary text-white rounded-lg p-3 shadow-lg">
            <div class="text-center">
              <div class="text-lg font-bold">Local</div>
              <div class="text-xs">Experts</div>
            </div>
          </div>
        </div>

        <!-- Additional Info Cards -->
        <div class="mt-8 grid grid-cols-2 gap-4">
          <div class="bg-orange-50 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-primary mb-1">{city.demographics.population?.toLocaleString()}</div>
            <div class="text-sm text-gray-600">Population Served</div>
          </div>
          <div class="bg-orange-50 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-secondary mb-1">{city.nearbyAreas.length}</div>
            <div class="text-sm text-gray-600">Areas Covered</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Why Choose Us Section -->
    <div class="mt-20 pt-16 border-t border-gray-200">
      <div class="text-center mb-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          Why {city.name} Businesses Choose Criztec Technologies
        </h3>
        <p class="text-gray-600 max-w-2xl mx-auto">
          We're not just another website development company. We're your local digital partners, invested in your
          success.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="bg-primary-light rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"
              ></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">Lightning Fast Delivery</h4>
          <p class="text-gray-600 text-sm">Most {city.name} projects completed within 2-4 weeks</p>
        </div>

        <div class="text-center p-6">
          <div class="bg-primary-light rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">Performance Focused</h4>
          <p class="text-gray-600 text-sm">Built for speed, accessibility, and SEO from day one</p>
        </div>

        <div class="text-center p-6">
          <div class="bg-primary-light rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.458v3.042m0 12.5v3.042m9.5-9.5h-3.042M3.5 12h3.042"
              ></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">Ongoing Support</h4>
          <p class="text-gray-600 text-sm">Astro and WordPress support packages available</p>
        </div>
      </div>
    </div>
  </div>
</section>
