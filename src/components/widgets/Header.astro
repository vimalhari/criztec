---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash, getAsset } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,
  isDark = false,
  isFullWidth = false,
  showToggleTheme = false,
  showRssFeed = false,
  position = 'center',
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky, dark: isDark },
    'top-0 z-40 flex-none mx-auto w-full bg-slate-900 border-b border-slate-800',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <div
    class:list={[
      'relative py-3 px-4 md:px-6 mx-auto w-full',
      {
        'md:flex md:justify-between': position !== 'center',
        'md:grid md:grid-cols-3 md:items-center': position === 'center',
        'max-w-7xl': !isFullWidth,
      },
    ]}
  >
    <!-- Logo -->
    <div class:list={[{ 'mr-auto rtl:mr-0 rtl:ml-auto': position === 'right' }, 'flex justify-between']}>
      <a class="flex items-center" href={getHomePermalink()}>
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>

    <!-- Navigation -->
    <nav
      class="items-center w-full md:w-auto hidden md:flex md:mx-5 overflow-y-auto overflow-x-hidden md:overflow-visible md:justify-self-center"
      aria-label="Main navigation"
      id="header-nav"
    >
      <ul
        class="flex flex-col md:flex-row md:self-center w-full md:w-auto text-xl md:text-[0.9rem] font-medium md:justify-center md:gap-0.5"
      >
        {
          links.map(({ text, href, links: sublinks }) => (
            <li class={sublinks?.length ? 'dropdown group relative' : ''}>
              {sublinks?.length ? (
                <>
                  <button
                    type="button"
                    class:list={[
                      'dropdown-toggle w-full flex items-center justify-between gap-1 px-4 py-3 md:py-2 rounded-lg hover:bg-primary/10 transition-colors whitespace-nowrap cursor-pointer',
                      { 'text-primary bg-primary/10': href === currentPath },
                    ]}
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    <span class="text-slate-300 group-hover:text-primary">{text}</span>
                    <Icon name="tabler:chevron-down" class="w-4 h-4 text-slate-500 transition-transform duration-200" />
                  </button>
                  {(() => {
                    const isGrouped = sublinks.some((link) => link.links?.length);
                    return (
                      <ul
                        class:list={[
                          'dropdown-menu pl-4 md:pl-0 font-medium md:absolute md:left-0 md:top-full bg-transparent md:bg-slate-800 md:shadow-xl md:border md:border-slate-700 md:rounded-xl',
                          isGrouped
                            ? 'md:min-w-[600px] md:p-5 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-4'
                            : 'md:min-w-[200px] md:py-2',
                        ]}
                      >
                        {sublinks.map(({ text: text2, href: href2, links: sublinks2 }) =>
                          sublinks2?.length ? (
                            <li class="py-2 md:py-0">
                              {text2 && (
                                <span class="block px-4 py-1 text-xs font-semibold uppercase tracking-wider text-slate-500 mb-1">
                                  {text2}
                                </span>
                              )}
                              <ul class="space-y-0.5">
                                {sublinks2.map(({ text: text3, href: href3 }) => (
                                  <li>
                                    <a
                                      class:list={[
                                        'block px-4 py-2 text-sm text-slate-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors',
                                        { 'text-primary bg-primary/10': href3 === currentPath },
                                      ]}
                                      href={href3}
                                    >
                                      {text3}
                                    </a>
                                  </li>
                                ))}
                              </ul>
                            </li>
                          ) : (
                            <li>
                              <a
                                class:list={[
                                  'block px-4 py-2 text-sm text-slate-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors',
                                  { 'text-primary bg-primary/10': href2 === currentPath },
                                ]}
                                href={href2}
                              >
                                {text2}
                              </a>
                            </li>
                          )
                        )}
                      </ul>
                    );
                  })()}
                </>
              ) : (
                <a
                  class:list={[
                    'block px-4 py-2 text-slate-300 hover:text-primary rounded-lg hover:bg-primary/10 transition-colors whitespace-nowrap',
                    { 'text-primary font-semibold': href === currentPath },
                  ]}
                  href={href}
                >
                  {text}
                </a>
              )}
            </li>
          ))
        }
      </ul>

      {
        actions?.length ? (
          <div class="mt-6 md:hidden px-4">
            <div class="grid gap-3">
              {actions.map((btnProps) => (
                <Button
                  {...btnProps}
                  class="w-full justify-center py-3 px-5 text-base font-semibold rounded-lg bg-primary text-white hover:bg-primary/90 transition-colors"
                />
              ))}
            </div>
          </div>
        ) : null
      }
    </nav>

    <!-- Actions -->
    <div
      class:list={[
        { 'ml-auto rtl:ml-0 rtl:mr-auto': position === 'left' },
        'hidden md:flex items-center justify-end gap-3 md:justify-self-end',
      ]}
    >
      {showToggleTheme && <ToggleTheme iconClass="w-5 h-5 text-slate-400 hover:text-white" />}
      {
        showRssFeed && (
          <a
            class="p-2 text-slate-400 hover:text-white hover:bg-white/10 rounded-lg transition-colors"
            aria-label="RSS Feed"
            href={getAsset('/rss.xml')}
          >
            <Icon name="tabler:rss" class="w-5 h-5" />
          </a>
        )
      }
      {
        actions?.length ? (
          <div class="flex gap-2">
            {actions.map((btnProps) => (
              <Button
                {...btnProps}
                class="py-2 px-5 text-sm font-semibold rounded-lg bg-primary text-white hover:bg-primary/90 transition-colors"
              />
            ))}
          </div>
        ) : null
      }
    </div>
  </div>
</header>
