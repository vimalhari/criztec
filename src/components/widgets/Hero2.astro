---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

import type { Hero as Props } from '~/types';

type Hero2Props = Props & {
  overlapHeader?: boolean;
};

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  overlapHeader = true,

  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),

  bgImage,
  isDark = true,

  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props as Hero2Props;

const hasDarkBackground = Boolean(bgImage) || Boolean(isDark);
const hasImage = Boolean(image);
---

<section
  class={`relative not-prose overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 ${overlapHeader ? 'md:-mt-header-height' : ''} ${bgImage ? 'bg-cover bg-center bg-no-repeat' : ''}`}
  style={bgImage ? `background-image: url('${bgImage}');` : ''}
  {...id ? { id } : {}}
>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>
  <div
    class="absolute inset-0 pointer-events-none bg-gradient-to-br from-slate-900/80 via-orange-900/20 to-amber-900/30"
  >
  </div>
  <div class="absolute inset-0 pointer-events-none bg-gradient-to-t from-slate-900/80 via-transparent to-transparent">
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    {overlapHeader ? <div class="pt-0 md:pt-header-height pointer-events-none" /> : null}
    <div class="py-10 md:py-12 lg:py-0 lg:flex lg:items-center lg:min-h-[50vh] lg:gap-8">
      <div class="basis-1/2 text-center lg:text-left pb-8 md:pb-12 mx-auto text-white">
        {
          tagline && (
            <p
              class={`text-xs font-semibold tracking-wider uppercase mb-2 intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter ${hasDarkBackground ? 'text-primary' : ''}`}
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class={`text-4xl font-bold leading-tight tracking-tight mb-3 font-heading intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter ${hasDarkBackground ? 'text-white' : ''}`}
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto lg:max-w-none">
          {
            subtitle && (
              <p
                class={`text-lg leading-relaxed mb-5 intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter ${hasDarkBackground ? 'text-white/80' : ''}`}
                set:html={subtitle}
              />
            )
          }

          {
            actions && (
              <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 lg:justify-start lg:m-0 lg:max-w-7xl intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter">
                {Array.isArray(actions) ? (
                  actions.map((action) => (
                    <div class="flex w-full sm:w-auto">
                      <Button
                        {...(action || {})}
                        class={`w-full sm:mb-0 ${hasDarkBackground && (!action?.variant || action?.variant === 'secondary' || (action?.class || '').includes('btn-secondary')) ? 'text-white border-white/20 hover:border-white/30 hover:bg-white/10' : ''}`}
                      />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }
        </div>
        {content && <Fragment set:html={content} />}
      </div>
      {
        hasImage ? (
          <div class="basis-1/2">
            <div class="relative m-auto max-w-md lg:max-w-lg intersect-once intercept-no-queue motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Image
                  class="mx-auto rounded-md w-full"
                  widths={[400, 512, 768]}
                  sizes="(max-width: 767px) 400px, (max-width: 1023px) 512px, 512px"
                  loading="eager"
                  width={512}
                  height={512}
                  {...(image as Record<string, unknown>)}
                />
              )}
            </div>
          </div>
        ) : (
          <div class="hidden lg:block basis-1/2" aria-hidden="true" />
        )
      }
    </div>
  </div>
</section>
